<!--Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="from-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="name" 
                     value="<%= book.name %>"
                    required>
                </div>
                <br>
                <div class="from-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    name="author" 
                     value="<%= book.author %>"
                    required>
                </div>
                <br>
                <div class="from-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Year of Publication"
                    name="published" 
                    value="<%= book.published %>"
                    required>
                </div>
                <br>
                <div class="from-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the brief description of the book"
                    name="description" 
                    required>
                    <%= book.description %>"
                    </textarea>
                </div>
                <br>
                <div class="from-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="pricedTextField"
                    placeholder="Enter the book's Price"
                    name="price" 
                    value="<%= book.price %>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/bottom_nav.ejs')  -%>
